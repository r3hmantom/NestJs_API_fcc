// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // it gets this from the first environment variable it gets
}

model User {
  id        Int      @id @default(autoincrement()) /// Int means integer
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String
  hash  String /// if you want any field to be optional, just put ? in end of it, in this case String?

  firstName String?
  lastName  String?
}

model Bookmark {
  id        Int      @id @default(autoincrement()) /// Int means integer
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title       String
  description String?
  link        String
}
